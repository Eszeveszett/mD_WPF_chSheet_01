<!--Előnyök és hátrányok fül. Ablak. Lista. Még nem csinál semmit, 
később lesz szerepe. Csak itt most elfér-->
        <TabItem Header="Advantages and disadvantages">
            <Grid Background="LightGreen">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="400"/>
            </Grid.RowDefinitions>
                
            <Viewbox Grid.Row="0">
            <Label Content="Advantages and disadvantages"
            HorizontalAlignment="Center"
            FontSize="16" FontWeight="Bold"/>
            </Viewbox>
                
            <Viewbox Grid.Row="1">
            <ListBox Width="300" Height="300" x:Name="LBO_advantages"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            ScrollViewer.CanContentScroll="True" Margin="5,5,5,5"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
            <DataTemplate>
            <Border BorderBrush="Aqua" BorderThickness="2" CornerRadius="5">
                <StackPanel>
                <TextBox Text="{Binding adId}" TextWrapping="Wrap"
                    IsReadOnly="True"/>
                <TextBox Text="{Binding adName}" TextWrapping="Wrap"
                    IsReadOnly="True"/>
                <TextBox Text="{Binding adDesc}" TextWrapping="Wrap"
                    IsReadOnly="True"/>
                </StackPanel>
            </Border>
            </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
            </Viewbox>
                
            <Viewbox Grid.Row="2">
            <ListBox Width="300" Height="300" x:Name="LBO_disadvantages"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            ScrollViewer.CanContentScroll="True" Margin="5,5,5,5"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
            <DataTemplate>
            <Border BorderBrush="Aqua" BorderThickness="2" CornerRadius="5">
                <StackPanel>
                <TextBox Text="{Binding disId}" TextWrapping="Wrap"/>
                <TextBox Text="{Binding disName}" TextWrapping="Wrap"/>
                <TextBox Text="{Binding disDesc}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
            </Viewbox>
            </Grid>
            </StackPanel>

<!--Gombok, amiket a felhasználó nyomkodhat-->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Label Content="Advantages and Disadvantages" FontSize="24" FontWeight="Bold"
            Foreground="Aquamarine" Background="Red"
            HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
            <Button x:Name="BTN_advantages" 
            Margin="5" Padding="10"
            Content="Advantages and disadvantages"/>
<!--Click="BTN_advantages_Click"-->
            </StackPanel>
            </StackPanel>

<!--Nem tudom ki vot az az istenverte túlintelligens faszparaszt
aki szerint az jó, hogy a megjegyzéseket három helyen négy
