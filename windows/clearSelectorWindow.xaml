                                <StackPanel Orientation="Horizontal">
                                    
                                <Button x:Name="BTN_strengthQualityM" Click="BTN_strengthQualityM_Click"
                                    Width="25" Height="25" Content="-" 
                                    FontWeight="Bold" FontSize="24" Padding="0,-7,0,0"/>
                                    
                                <TextBox x:Name="TBO_strengthQuality" 
                                    Width="100" FontSize="18" FontWeight="Bold"
                                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    IsReadOnly="True"/>
                                    
                                <Button x:Name="BTN_strengthQualityP" 
                                    Width="25" Height="25" Content="+" Click="BTN_strengthQualityP_Click"
                                    FontWeight="Bold" FontSize="24" Padding="0,-7,0,0"/>
                                
                                </StackPanel>
                                <ProgressBar x:Name="PBR_strengthQuality" Foreground="Firebrick"
                                    Width="100" Height="10" Margin="5"/>
                            </StackPanel>
                            <Label Content="Endurence" HorizontalContentAlignment="Center"/>
                            <StackPanel Margin="5">
                                <StackPanel Orientation="Horizontal">
                                    
                                <Button x:Name="BTN_endurenceQualityM" Click="BTN_endurenceQualityM_Click"
                                    Width="25" Height="25" Content="-" 
