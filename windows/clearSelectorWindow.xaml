<Window x:Class="mD_WPF_chSheet_01.windows.clearSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mD_WPF_chSheet_01.windows"
        mc:Ignorable="d" x:Name="WDW_Csw"
        Title="Clear Selector Window" Height="900" Width="1600" 
        WindowStyle="None" WindowState="Maximized" FontSize="16"
        WindowStartupLocation="CenterScreen" FontWeight="Bold">
    <!---->
    <Window.Resources>
        
        <Cursor x:Key="defaultCursor">
            ../images/cursorIcon/pointer.cur
        </Cursor>
        <Cursor x:Key="attackCursor">
            ../images/cursorIcon/attack.cur
        </Cursor>
        <Cursor x:Key="identCursor">
            ../images/cursorIcon/pointerident.cur
        </Cursor>
        <Cursor x:Key="waitCursor">
            ../images/cursorIcon/hourglass.cur
        </Cursor>
        
        <Style x:Uid="listitemstyle" TargetType="ListBoxItem">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="0,5,0,5"/>
            <Setter Property="Cursor" Value="{StaticResource attackCursor}"/>
        </Style>
        
        <Style x:Uid="textboxStyle" TargetType="TextBox">
            <Setter Property="Cursor" Value="{StaticResource defaultCursor}"/>
        </Style>

        <Style x:Uid="textblockStyle" TargetType="TextBlock">
            <Setter Property="Cursor" Value="{StaticResource defaultCursor}"/>
        </Style>

        <Style x:Uid="gridStyle" TargetType="Grid">
            <Setter Property="Cursor" Value="{StaticResource defaultCursor}"/>
        </Style>

        <Style x:Uid="buttonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="{StaticResource identCursor}"/>
        </Style>

        <Style x:Uid="tabitemStyle" TargetType="TabItem">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <Style x:Uid="toolTippStyle" TargetType="ToolTip">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel>
                        <TextBlock Text="{Binding}" MaxWidth="400" TextWrapping="Wrap" 
                            FontWeight="Bold"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--<Style x:Uid="scrollbarStyle" TargetType="ScrollBar">
        </Style>-->
    </Window.Resources>
    
    
    <Viewbox x:Name="VBX_Csw" Margin="-5,0,-5,-5" Cursor="{StaticResource defaultCursor}">
    <Grid Background="WhiteSmoke"
        Height="{Binding ElementName=WDW_Csw, Path=ActualHeight}"
        Width="{Binding ElementName=WDW_Csw, Path=ActualWidth}">

        <Grid.RowDefinitions>
            <!--<RowDefinition Height="50"/>-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="../images/bgImages/startScreen.jpg" Grid.ColumnSpan="3" Grid.RowSpan="2"
            Stretch="UniformToFill"/>
            <!--Upper Row: Header-->
        
        <!--<StackPanel Margin="0,5,0,5" Orientation="Horizontal"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Grid.ColumnSpan="3" Background="Aqua">

            <Label Content="Name:"/>
            <Label Width="75"/>

            <Label Content="Age:"/>
            <Label Width="75"/>

            <Label Content="Race:"/>
            <Label Width="75"/>

            <Label Content="Gender:"/>
            <Label Width="75"/>

            <Label Content="Background:"/>
            <Label Width="75"/>

            <Label Content="Religion"/>
            <Label Width="75"/>
        </StackPanel>-->

        
        
        
    <TabControl Grid.Row="0" Grid.ColumnSpan="3">
        <TabItem Header="Race and Gender">
            
            <Grid Background="LightGreen">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
                <Image Source="../images/bgImages/faeryeVilage.jpg" Grid.ColumnSpan="3" 
                       Stretch="UniformToFill"/>
<!--Race and gender selection-->
            <Grid Name="GRD_rgGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" x:Name="GRD_rgGridColumnOne"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
            <Viewbox>
            <StackPanel Grid.Column="0" Grid.Row="0" 
            VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Select a race" HorizontalAlignment="Center"
            FontSize="24" FontWeight="Bold" Foreground="Brown"/>
            <StackPanel Orientation="Horizontal" Margin="5"
            x:Name="SP_raceandgender" 
            Width="{Binding ElementName=Sp_rgUpperpanel, Path=ActualWidth}">
            <ListBox Width="380" Height="300"
            Name="LBO_rRace" ItemsSource="{Binding}"
            IsSynchronizedWithCurrentItem="True"
            SelectionChanged="LBO_rRace_SelectionChanged"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            ScrollViewer.PanningDeceleration="5"
            ScrollViewer.PanningMode="Both"
            ScrollViewer.PanningRatio="5" BorderBrush="{x:Null}"
            Background="{x:Null}">
            <ListBox.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
            <DataTemplate>
            <Border BorderThickness="1" 
            CornerRadius="5" Margin="30,-1,30,0">
                
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                Margin="5,0,15,0">
<!--Image Source="..\images\bgImages\startScreen.jpg" -->
            <Image Source="{Binding picture}"
            Stretch="UniformToFill" Width="100" Height="85">
            <Image.Clip>
                <RectangleGeometry RadiusX="25" RadiusY="25" Rect="0,0,100,85"/>
            </Image.Clip>
            </Image>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1"
            HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding RaceName}" Width="125"
                TextAlignment="Center" Foreground="SandyBrown"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2">
            <TextBlock Text="{Binding Gender}"
                TextAlignment="Center" Foreground="SandyBrown"/>
            </StackPanel>


            </Grid>
            </Border>
            </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
                    <!--<ListBox Width="160" Height="300" Margin="10,0,0,0"
                    x:Name="LBO_gender" ItemsSource="{Binding}"
                    IsSynchronizedWithCurrentItem="True" >
                    --><!--SelectionChanged="LBO_gender_SelectionChanged"--><!--
                    </ListBox>-->
            </StackPanel>
            </StackPanel>
            </Viewbox>

            <Viewbox Grid.Column="0" Grid.Row="1" Margin="10,0,10,30">
            <StackPanel Margin="10" VerticalAlignment="Center" 
            HorizontalAlignment="Center">
                
            <TextBox Width="380" Height="300" x:Name="TBO_raceModifier"
            FontSize="14" FontWeight="Bold"
            TextWrapping="Wrap" IsReadOnly="True" TextAlignment="Justify"
            HorizontalContentAlignment="Center" Foreground="SandyBrown"
            VerticalContentAlignment="Center"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            Background="{x:Null}" BorderBrush="{x:Null}"
            Opacity="50" OpacityMask="Aqua" Padding="5"
            FontFamily="Arial Nova">
                
            </TextBox>
            </StackPanel>   
            </Viewbox>
            </Grid>
<!--CharacterImage-->
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                <Viewbox Margin="10,0,10,50">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
                        <Image x:Name="IMG_Race" Width="175" Height="175"
                        Stretch="UniformToFill">
                            <Image.Clip>
                                <RectangleGeometry RadiusX="25" RadiusY="25" Rect="0,0,175,175"/>
                            </Image.Clip>
                        </Image>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                        <Label Content="Base Health" FontSize="8"
                        HorizontalContentAlignment="Center" Foreground="SandyBrown"/>
                        <ProgressBar Minimum="0" Maximum="60" Height="5" x:Name="PBR_baseHealth"
                        Foreground="Red"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                        <Label Content="Base Stamina" FontSize="8"
                            HorizontalContentAlignment="Center" Foreground="SandyBrown"/>
                        <ProgressBar Minimum="0" Maximum="60" Height="5" x:Name="PBR_baseStamina"
                            Foreground="Yellow"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                        <Label Content="Base Mana" FontSize="8"
                            HorizontalContentAlignment="Center" Foreground="SandyBrown"/>
                        <ProgressBar Minimum="0" Maximum="60" Height="5" x:Name="PBR_baseMana"
                            Foreground="Blue"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
                        <Label Content="Base Impact" FontSize="8"
                            HorizontalContentAlignment="Center" Foreground="SandyBrown"/>
                        <ProgressBar Minimum="0" Maximum="60" Height="5" x:Name="PBR_baseImpact"
                            Foreground="Magenta"/>
                    </StackPanel>

                </Grid>
                </Viewbox>
            </StackPanel>

<!--Általános leírása, történelme-->
            <Viewbox Grid.Column="2">
            <StackPanel Margin="10,10,10,30">
            <Label Content="History" HorizontalAlignment="Center"
            FontSize="24" FontWeight="Bold" Foreground="Brown"/>
            <TextBox Width="375" Height="600" Margin="0,5,0,0" Padding="5"
            x:Name="TBO_placeOfLive" FontSize="14" FontWeight="Bold"
            TextWrapping="Wrap" IsReadOnly="True" TextAlignment="Justify"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            Background="{x:Null}" BorderBrush="{x:Null}"
            FontFamily="Arial Nova">
            </TextBox>
            </StackPanel>
            </Viewbox>
            </Grid>
        </TabItem>
        
<!--Előnyök és hátrányok fül. Ablak. Lista. Még nem csinál semmit, 
később lesz szerepe. Csak itt most elfér-->
        <TabItem Header="Advantages and disadvantages">
            <Grid Background="LightGreen">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Image Source="../images/bgImages/forestVilage.jpg" Grid.ColumnSpan="3" Stretch="Fill"/>
                
            <StackPanel Grid.Column="0">
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
                
            <Viewbox Grid.Row="0">
            <Label Content="Advantages and disadvantages"
            HorizontalAlignment="Center" Foreground="DarkGoldenrod"
            FontSize="16" FontWeight="Bold"/>
            </Viewbox>
                
            <Viewbox Grid.Row="1">
            <ListBox Width="300" Height="215" x:Name="LBO_advantages"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            ScrollViewer.CanContentScroll="True" Margin="5,0,5,0"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            Background="{x:Null}" BorderBrush="{x:Null}" HorizontalContentAlignment="Center">
            <ListBox.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
            <DataTemplate>
            <Border BorderBrush="Brown" BorderThickness="2" CornerRadius="5">
                <StackPanel>
                <TextBlock Text="{Binding adName}" TextWrapping="Wrap" Width="250"
                    FontSize="12" Padding="5,0,5,0" 
                    TextDecorations="Underline" HorizontalAlignment="Center"
                    Foreground="LightGoldenrodYellow"/>
                <TextBlock Text="{Binding adDesc}" TextWrapping="Wrap" Width="250"
                    FontSize="12" Padding="5,0,5,0" 
                    HorizontalAlignment="Center"
                    Foreground="Gold"/>
                </StackPanel>
            </Border>
            </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
            </Viewbox>
                
            <Viewbox Grid.Row="2">
            <ListBox Width="300" Height="200" x:Name="LBO_disadvantages"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            ScrollViewer.CanContentScroll="True" Margin="5,0,5,0"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            Background="{x:Null}" BorderBrush="{x:Null}" HorizontalContentAlignment="Center">
            <ListBox.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
            <DataTemplate>
            <Border BorderBrush="Aqua" BorderThickness="2" CornerRadius="5">
                <StackPanel>
                <TextBlock Text="{Binding disName}" FontSize="12" Padding="5,0,5,0"
                TextWrapping="Wrap" Width="250" TextDecorations="Underline"
                Foreground="LightGoldenrodYellow"/>
                <TextBlock Text="{Binding disDesc}" FontSize="12" Padding="5,0,5,0"
                TextWrapping="Wrap" Width="250"
                Foreground="Gold"/>
                </StackPanel>
            </Border>
            </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
            </Viewbox>
            </Grid>
            </StackPanel>

<!--Gombok, amiket a felhasználó nyomkodhat-->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Label Content="Advantages and Disadvantages" FontSize="24" FontWeight="Bold"
            Foreground="Aquamarine" Background="Red"
            HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
            <!--<Button x:Name="BTN_advantages" 
            Margin="5" Padding="10"
            Content="Advantages and disadvantages"/>-->
<!--Click="BTN_advantages_Click"-->
            </StackPanel>
            </StackPanel>

<!--Nem tudom ki vot az az istenverte túlintelligens faszparaszt
aki szerint az jó, hogy a megjegyzéseket három helyen négy
különmböző jelkombináció közé kell tenni, és nem mondom, hogy bassza
meg egy elefánt. Megelégszem azzal, ha megujjazza-->
            <StackPanel Grid.Column="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="325"/>
                    <ColumnDefinition Width="325"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.ColumnSpan="2">
                <Label Content="Attributions" FontSize="60" FontWeight="Bold"
                HorizontalAlignment="Center" Margin="5" Foreground="DarkGoldenrod"/>
                </StackPanel>

                <StackPanel Grid.Column="0" Grid.Row="1" Margin="50,20,0,10">
                    <ListBox x:Name="LBO_myVitality" Width="250" Height="350"
                    HorizontalContentAlignment="Center" Background="{x:Null}">
                    <ListBox.Resources>
                    <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                    </ListBox.Resources>
                    <StackPanel Height="{Binding ElementName=LBO_myVitality, Path=ActualHeight}" 
                        Width="225" Margin="0,-10,0,0">
                                
                    <Label Content="Vitality" HorizontalContentAlignment="Center"
                           FontSize="30" FontWeight="Bold" Foreground="Red"/>
                    <TextBox x:Name="TBO_myVitality" Width="50" IsReadOnly="True" 
                    TextAlignment="Center" Margin="5"/>
                    <ProgressBar x:Name="PBR_myVitality" Minimum="0" Maximum="75"
                    Height="10" Margin="5">
                    <ProgressBar.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="1,0">
                            <GradientStop Color="Red" Offset="0"/>
                            <GradientStop Color="DarkRed" Offset="1"/>
                        </LinearGradientBrush>
                    </ProgressBar.Foreground>   
                    </ProgressBar>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myStrengthMin"
                    ToolTip="Strength" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        
                    <Label Content="Strength" Width="110" HorizontalContentAlignment="Center"
                           Foreground="Firebrick" FontSize="20"/>

                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myStrengthMax"
                    ToolTip="Strength" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                        
                    <ProgressBar x:Name="PBR_myStrength" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="Firebrick"/>

                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myEnduranceMin"
                    ToolTip="Strength" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/> 
                        
                    <Label Content="Endurence" Width="110" HorizontalContentAlignment="Center"
                           Foreground="Crimson" FontSize="20"/>

                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myEnduranceMax"
                    ToolTip="Influence" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                        
                    <ProgressBar x:Name="PBR_myEndurance" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="Crimson"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myToughtnessMin"
                    ToolTip="Luck" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        
                    <Label Content="Toughtness" Width="110" HorizontalContentAlignment="Center"
                           Foreground="Tomato" FontSize="20"/>
                        
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myToughtnessMax"
                    ToolTip="Luck" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                        
                    <ProgressBar x:Name="PBR_myToughtness" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="Tomato"/>
                                
                    </StackPanel>
                    </ListBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,20,50,10">
                    <ListBox x:Name="LBO_myDexterity" Width="250" Height="350"
                    HorizontalContentAlignment="Center" Background="{x:Null}">
                    <ListBox.Resources>
                    <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                    </ListBox.Resources>
                    <StackPanel Height="{Binding ElementName=LBO_myDexterity, Path=ActualHeight}"
                                Width="225" Margin="0,-10,0,0">
                                
                    <Label Content="Dexterity" HorizontalContentAlignment="Center"
                           FontSize="30" FontWeight="Bold" Foreground="Goldenrod"/>
                    <TextBox x:Name="TBO_myDexterity" Width="50" IsReadOnly="True" 
                    TextAlignment="Center" Margin="5"/>
                    <ProgressBar x:Name="PBR_myDexterity" Minimum="0" Maximum="75"
                    Height="10" Margin="5" Foreground="Goldenrod"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myAgilityMin"
                    ToolTip="Agility" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        
                    <Label Content="Agility" Width="110" HorizontalContentAlignment="Center"
                           Foreground="Orange" FontSize="20"/>

                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myAgilityMax"
                    ToolTip="Agility" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <ProgressBar x:Name="PBR_myAgility" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="Orange"/>

                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myPerceptionMin"
                    ToolTip="Perception" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>    
                        
                    <Label Content="Perception" Width="110" HorizontalContentAlignment="Center"
                           Foreground="Gold" FontSize="20"/>

                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myPerceptionMax"
                    ToolTip="Influence" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <ProgressBar x:Name="PBR_myPerception" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="Gold"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myQuicknessMin"
                    ToolTip="Quickness" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        
                    <Label Content="Quickness" Width="110" HorizontalContentAlignment="Center"
                           Foreground="LightGoldenrodYellow" FontSize="20"/>
                        
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myQuicknessMax"
                    ToolTip="Quickness" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <ProgressBar x:Name="PBR_myQuickness" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="LightGoldenrodYellow"/>
                                
                    </StackPanel>
                    </ListBox>
                </StackPanel>

                <StackPanel Grid.Column="0" Grid.Row="2" Margin="50,10,0,0">
                    <ListBox x:Name="LBO_myIntuition" Width="250" Height="350"
                    HorizontalContentAlignment="Center" Background="{x:Null}">
                    <ListBox.Resources>
                    <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                    </ListBox.Resources>
                    <StackPanel Height="{Binding ElementName=LBO_myIntuition, Path=ActualHeight}"
                        Width="225" Margin="0,-10,0,0">
                                
                    <Label Content="Intuition" HorizontalContentAlignment="Center"
                           FontSize="30" FontWeight="Bold" Foreground="SteelBlue"/>
                    <TextBox x:Name="TBO_myIntuition" Width="50" IsReadOnly="True" 
                    TextAlignment="Center" Margin="5"/>
                    <ProgressBar x:Name="PBR_myIntuition" Minimum="0" Maximum="75"
                    Height="10" Margin="5" Foreground="SteelBlue"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myIntelligenceMin"
                    ToolTip="IntelligenceMin" IsReadOnly="True" Width="45"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        
                    <Label Content="Intelligence" Width="120" HorizontalContentAlignment="Center"
                           Foreground="DarkSlateBlue" FontSize="20" Background="GhostWhite"/>

                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myIntelligenceMax"
                    ToolTip="IntelligenceMax" IsReadOnly="True" Width="45"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <ProgressBar x:Name="PBR_myIntelligence" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="DarkSlateBlue"/>

                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myWisdomMin"
                    ToolTip="Wisdom" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>    
                        
                    <Label Content="Wisdom" Width="110" HorizontalContentAlignment="Center"
                           Foreground="MediumSlateBlue" FontSize="20"/>

                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myWisdomMax"
                    ToolTip="Wisdom" IsReadOnly="True" Width="50"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                    <ProgressBar x:Name="PBR_myWisdom" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="MediumSlateBlue"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myResourcefullMin"
                    ToolTip="ResourcefullMin" IsReadOnly="True" Width="40"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        
                    <Label Content="Resourcefull" Width="130" HorizontalContentAlignment="Center"
                           Foreground="DeepSkyBlue" FontSize="20"/>
                        
                    <TextBox Text="Value" TextAlignment="Center" x:Name="TBO_myResourcefullMax"
                    ToolTip="Luck" IsReadOnly="True" Width="40"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </StackPanel>
                        
                    <ProgressBar x:Name="PBR_myLuck" Minimum="3" Maximum="30"
                    Height="10" Margin="5" Foreground="DeepSkyBlue"/>
                                
                    </StackPanel>
                    </ListBox>
